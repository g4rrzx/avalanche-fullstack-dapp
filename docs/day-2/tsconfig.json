{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "hardhat.config.ts",
    "tasks",
    "scripts",
    "test",
    "helpers"
  ]
}